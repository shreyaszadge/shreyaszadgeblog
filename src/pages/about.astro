---
import MainLayout from '../layouts/MainLayout.astro';
const pageTitle = "ABout Page";



const identity = {
  firstName: "Shreyas zadge",
  country: "india",
  occupation: "software developer",
  hobbies: ["coding", "reading", "learn new things"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"];

const happy = true;
const finished = false;
const goal = 3;

const skillColor = "navy";

---


<MainLayout pageTitle={pageTitle}>
  <div class="container">
    <div class="row">
      <div class="col s12">
        <div class="card">
          <div class="card-content">
            <span class="card-title">About Me</span>
            <ul class="collection">
              <li class="collection-item">My name is {identity.firstName}.</li>
              <li class="collection-item">I live in {identity.country} and work as a {identity.occupation}.</li>
              {identity.hobbies.length >= 2 &&
                <li class="collection-item">Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}</li>
              }
            </ul>
          </div>
        </div>
      </div>
    </div>
  
    <div class="row">
      <div class="col s12">
        <div class="card">
          <div class="card-content">
            <span class="card-title">My Skills</span>
            <ul class="collection">
              {skills.map((skill) => <li class="collection-item">{skill}</li>)}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  
</MainLayout>

